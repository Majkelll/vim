" Line Numbering Settings
set relativenumber
set number
set nocompatible

" Scrolling Behavior
set scrolloff=5

" Search Settings
set incsearch

" Key Mappings
map Q gq
map ge <Action>(GotoNextError)
map gE <Action>(GotoPreviousError)
map [[ <Action>(MethodUp)
map ]] <Action>(MethodDown)

" Plugins
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'

" Clipboard Settings
set clipboard+=unnamed

let mapleader=" "
map <leader>o <Action>(CloseAllEditorsButActive)
Plug 'preservim/nerdtree'

nmap gi <Action>(GotoImplementation)
Plug 'tpope/vim-surround'

"Test
set ignorecase
set smartcase
set hlsearch
set noerrorbells
